<nav class="navbar navbar-default navbar-fixed-top ">

<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "Logo2.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Recherche des activites à partir d'une date -->
    <%= link_to events_path(debut: DateTime.now.to_s), info: "A partir d'aujourd'hui", class: "navbar-wagon-brand" do %>
        <i class="fa fa-calendar-check-o fa-2x" aria-hidden="true"></i>
    <% end %>


    <!-- Search form -->
    <form action="search" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something " name="mots" >
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">42</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profils_path do %>
                <i class="fa fa-users"></i> <%= t(".profile", default: "Membres") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
                    <!-- Si le profil existe on l'edite sinon on le cree -->
                <% if current_user.try(:profil) %>
                      <%= link_to profil_path(current_user.profil) do %>
                        <i class="fa fa-user"></i>  <%= t(".profile", default: "Mon profil") %>
                      <% end %>
                <% else %>
                      <%= link_to new_profil_path do %>
                            <i class="fa fa-user"></i>  <%= t(".profile", default: "Mon profil") %>
                      <% end %>
                <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>

    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Les événements"), events_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>

              <%= link_to profils_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Membres") %>
              <% end %>


        <li><a href="#">Les membres</a></li>
        <li><a href="#">Contact</a></li>
        <% if user_signed_in? %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

</nav>
