<p id="notice"><%= notice %></p>
<% @titre_page = 'Liste' %>
<h3 class="text-center">Liste des événements </h1>

<div class="container">
    <% @events = @events.sort_by { |e| e.debut} %>
    <% anc_debut_jour = nil %>

    <% @events.each do |event| %>
      <% if event.debut_jour != anc_debut_jour %>
        <div class ="row">
            <div class="col-xs-12 col-sm-12 col-md-12 text-center">  <%= event.debut_jour %> </div>
        </div>
      <% end %>
      <%= link_to event do %>
          <font color="#FF0000">
          <div class="row">
              <div class="col-xs-1 col-sm-1 col-md-1 text-left"> <font size=-2> <%= event.debut_heure %> </font> </div>
              <div class="col-xs-10 col-sm-10 col-md-10 text-left"><%= event.titre %> </div>
           </div>

           <div class="row">
             <div class="col-xs-9 col-xs-offset-1 col-sm-9 col-sm-offset-1 col-md-9 col-md-offset-1"> <%= event.ville %> </div>
             <div class="col-xs-1 col-sm-1 col-md-1"> <%= event.prix %><sup>€</sup> </div>
           </div>
           </font>
      <% end %>
      <% anc_debut_jour = event.debut_jour %>
    <% end %>
</div>
</div>
</div>


<br>

<p class="text-center">
<%= link_to 'Ajouter un événement', new_event_path , class: "btn btn-primary"%>
</p>
