<p id="notice"><%= notice %></p>
<% @titre_page = 'Liste' %>
<h1 class="text-center">Liste des événements </h1>


  <!-- Table -->
<table class="table">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Prix</th>
      <th>A</th>
      <th>M</th>
      <th>S</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr >
        <td><%= event.titre %></td>
        <td><%= event.description_courte %></td>
        <td><%= event.prix %></td>
        <td><%= link_to ' Afficher ', event %></td>
        <td><%= link_to ' Modifier ', edit_event_path(event) %></td>
        <td><%= link_to ' Supprimer ', event, method: :delete, data: { confirm: 'Etes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="text-center">
<%= link_to 'Ajouter un événement', new_event_path , class: "btn btn-primary"%>
</p>

